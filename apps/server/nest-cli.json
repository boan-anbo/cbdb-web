{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "tsc",
    "tsConfigPath": "tsconfig.build.json",
    "assets": [
      {
        "include": "workers/*.worker.js",
        "watchAssets": true,
        "outDir": "dist"
      }
    ]
  }
}
