{
  "name": "nestjs-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "build": "nest build",
    "build:web": "nest build --config nest-cli.web.json",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:cov": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts",
    "bench": "vitest bench",
    "bench:watch": "vitest bench --watch",
    "bench:ui": "vitest bench --ui",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "cbdb:introspect": "drizzle-kit introspect --config=drizzle.cbdb.config.ts",
    "cbdb:generate": "drizzle-kit generate --config=drizzle.cbdb.config.ts",
    "cbdb:studio": "drizzle-kit studio --config=drizzle.cbdb.config.ts",
    "openapi:generate": "tsx src/generate-openapi.ts",
    "kill:server": "lsof -t -i:${PORT:-18019} | xargs kill -9 2>/dev/null || echo 'No process found on port ${PORT:-18019}'"
  },
  "dependencies": {
    "@cbdb/core": "*",
    "@libsql/client": "^0.15.15",
    "@nestjs/throttler": "6.4.0",
    "@scalar/nestjs-api-reference": "1.0.1",
    "@scalar/openapi-to-markdown": "0.2.37",
    "7zip-bin": "5.2.0",
    "dotenv": "^17.2.2",
    "graphology": "0.26.0",
    "graphology-communities-louvain": "2.0.2",
    "graphology-components": "1.5.4",
    "graphology-dag": "0.4.1",
    "graphology-gexf": "0.13.2",
    "graphology-layout": "0.6.1",
    "graphology-layout-forceatlas2": "0.10.1",
    "graphology-metrics": "2.4.0",
    "graphology-operators": "1.6.1",
    "graphology-shortest-path": "2.1.0",
    "graphology-traversal": "0.3.1",
    "graphology-types": "0.24.8",
    "js-yaml": "4.1.0",
    "node-7z": "3.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "workerpool": "9.3.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/core": "^1.13.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@vitest/ui": "^3.2.4",
    "better-sqlite3": "12.2.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.18.0",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "unplugin-swc": "^1.5.7",
    "vitest": "^3.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
