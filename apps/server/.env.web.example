# Web deployment configuration example
# Copy this file to .env.web and update with your values

# Deployment mode
DEPLOYMENT_MODE=web
NODE_ENV=production

# Archive features should be disabled in web mode
ENABLE_ARCHIVE_FEATURES=false

# Direct CBDB database path (no extraction)
# This should point to a pre-extracted database on the server
CBDB_PATH=/path/to/cbdb/latest.db

# Application database for user preferences
APP_DB_PATH=/path/to/app/cbdb-desktop.db

# Server port
PORT=3456