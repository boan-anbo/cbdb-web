# Electron deployment configuration example
# Copy this file to .env.electron and update with your values

# Deployment mode
DEPLOYMENT_MODE=electron
NODE_ENV=production

# Archive features enabled in electron mode
ENABLE_ARCHIVE_FEATURES=true

# Paths will be set dynamically by Electron
# CBDB_PATH will be set when user extracts/opens database
# APP_DB_PATH will be set to user's app data directory

# Server port
PORT=18019