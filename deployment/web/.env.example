# CBDB Web Deployment Environment Configuration
# Copy this file to .env and adjust values as needed

# Backend Configuration
NODE_ENV=production
BACKEND_PORT=18019
CBDB_PATH=/app/cbdb_sql_db/latest.db
APP_DB_PATH=/app/data/cbdb-desktop.db

# Public URL Configuration (for web deployment)
# This should be the full base URL where the app is hosted
# Examples:
# - https://dh-tools.com/cbdb
# - https://yourdomain.com/api
PUBLIC_URL=https://dh-tools.com/cbdb

# Legacy API prefix (being phased out in favor of PUBLIC_URL)
API_PREFIX=api

CORS_ORIGIN=http://localhost:3000
ENABLE_SWAGGER=false
LOG_LEVEL=info

# Frontend Configuration
FRONTEND_PORT=3000

# Database Volumes (host paths)
# Adjust these paths to match your server setup
CBDB_DB_HOST_PATH=../../cbdb_sql_db
APP_DATA_HOST_PATH=./data

# Docker Configuration
COMPOSE_PROJECT_NAME=cbdb-web
RESTART_POLICY=unless-stopped