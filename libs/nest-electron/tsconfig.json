{
  "compilerOptions": {
    "target": "es6",
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "module": "commonjs",
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./dist",
    "removeComments": false,
    "sourceMap": false,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts",
    "test/*.ts"
  ]
}
